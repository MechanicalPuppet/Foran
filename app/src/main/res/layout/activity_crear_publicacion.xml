<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".crearPublicacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/abc_vector_test"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/ForanImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/icono" />
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:background="@drawable/second_gradient"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1">

            <ImageView
                android:id="@+id/iv_forum_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/rent"
                />

            <TextView
                android:id="@+id/tv_forum_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear publicación"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                />
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear publicación"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/et_Titulo"
            android:fontFamily="sans-serif-black"
            android:layout_width="250dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textColorHint="@color/black"
            android:background="@drawable/round_editext"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:hint="Título"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_contenido"
            android:layout_width="250dp"
            android:layout_height="319dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_editext"
            android:fontFamily="sans-serif-black"
            android:hint="contenido"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:maxLength="140"
            android:maxLines="5"
            android:textAlignment="center"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btnPublicar"
            android:layout_marginTop="30dp"
            android:layout_width="180dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:background="@drawable/round_editext"
            android:fontFamily="sans-serif-black"
            android:text="Publicar"
            android:textSize="12sp"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>