<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoadingActivity">


    <ImageView
        android:id="@+id/imgLoading"
        android:layout_width="227dp"
        android:layout_height="177dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_foran" />

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Ni de aquí ni de allá"
        android:textAlignment="center"
        android:textColor="@color/black"

        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLoading"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="84dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="83dp"
        android:layout_height="76dp"

        android:layout_marginEnd="292dp"
        android:layout_marginBottom="364dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/messageboxhdpi" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="56dp"
        android:layout_height="61dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLoading"
        app:layout_constraintVertical_bias="0.446"
        app:srcCompat="@drawable/locationgrayhdpi" />

    <ImageView

        android:id="@+id/imageView5"
        android:layout_width="231dp"
        android:layout_height="212dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLoading"
        android:background="@drawable/round_gradient" />

    <ImageView

        android:id="@+id/imageVie20w"
        android:layout_width="56dp"
        android:layout_height="61dp"

        android:layout_marginStart="164dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toTopOf="@+id/imgLoading"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cubiertoshdpi" />

    <ImageView

        android:id="@+id/imageView6"
        android:layout_width="231dp"
        android:layout_height="212dp"

        android:layout_marginEnd="132dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageVie20w"
        android:background="@drawable/round_gradientverde"
        />

</androidx.constraintlayout.widget.ConstraintLayout>